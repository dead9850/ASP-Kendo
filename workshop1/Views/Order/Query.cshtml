<div id="grid"></div>
<script>
    $(document).ready(function() {
        // create DatePicker from input HTML element
        $("#OrderDate").kendoDatePicker();
        $("#ShipedDate").kendoDatePicker();
        $("#RequiredDate").kendoDatePicker();


        $("#OrderID").kendoNumericTextBox({
            format: "n0",
            min: 0
        });

        $("#EmployeeID").kendoDropDownList();
        $("#ShipperID").kendoDropDownList();


        //Ajax
        $("#Search").click(function () {

            $.ajax({
                type: "POST",
                url: "/Order/Query",
                data: {
                    OrderID: $("#OrderID").val(),
                    CompanyName: $("#CompanyName").val(),
                    EmployeeID: $("#EmployeeID").val(),
                    ShipperID: $("#ShipperID").val(),
                    OrderDate: $("#OrderDate").val(),
                    ShipedDate: $("#ShipedDate").val(),
                    RequiredDate: $("#RequiredDate").val(),
                },
                dataType: "json",
                success: function (data) {
                    console.log("success");
                    console.log(data);
                    console.log(data[0]['OrderID']);
                    console.log(data.length);
                    var arr = new Array();

                    for (var i = 0; i < data.length; i++) {
                        arr.push({
                                "OrderID": data[i]['Item1'], "CompanyName": data[i]['Item2'],
                                "OrderDate": data[i]['Item3'], "ShipedDate": data[i]['Item4'], "Freight": data[i]['Item5']
                        });
                    }
                    console.log('test', arr);


                    $("#grid").kendoGrid({
                        dataSource: new kendo.data.DataSource({
                            data: arr,
                            pageSize: 10
                        }),
                        height: 340,
                        sortable: true,
                        pageable: {
                            refresh: true,
                            pageSizes: true,
                            buttonCount: 5
                        },
                        columns: [{
                            field: "OrderID",
                            title: "訂單編號",
                        }, {
                            field: "CompanyName",
                            title: "客戶名稱"
                        }, {
                            field: "OrderDate",
                            title: "訂購日期"
                        }, {
                            field: "ShipedDate",
                            title: "發貨日期",
                        }, {
                            field: "Freight",
                            title: "運費",
                        }, {
                            field: "",
                            template: function (dataItem) {
                                return "<a href='/Order/UpdateOrder?orderID=" + dataItem.OrderID + "'>修改</a>";
                           }
                        }, {
                            field: "",
                            template: function (dataItem) {
                                return "<input type='button' value='刪除' onclick='DeleteOrder(" + dataItem.OrderID + ")'>";
                            }
                        }]
                    });


                },
                error: function (e) {
                    console.log("error");
                    console.log(e);
                }
            })
        });

    });

    function DeleteOrder(orderId) {
        $.ajax({
            type: "GET",
            url: "/Order/DeleteOrder?OrderID=" + orderId,
            dataType: "json",
            success: function (r) {
                alert('刪除成功');
                location.href = '@Url.Action("Query", "Order")'
            },
            error: function (r) {
                alert('刪除失敗!');
            },
        })
    }
</script>



